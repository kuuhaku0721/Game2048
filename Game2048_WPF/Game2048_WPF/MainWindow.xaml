            <Grid Grid.Row="3" Grid.Column="1">
                <Label Name="lab31" Content="开" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Grid>
            <Grid Grid.Row="3" Grid.Column="2">
