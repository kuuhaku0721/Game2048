            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                <Label Name="lab11" Content="小"  FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="2">
                <Label Name="lab12" Content="游"  FontSize="32"  HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="3">
                <Label Name="lab13" Content="戏"  FontSize="32"  HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="0">
