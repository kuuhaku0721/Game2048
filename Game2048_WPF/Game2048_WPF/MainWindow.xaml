            </Grid>
            <Grid Grid.Row="3" Grid.Column="3">
                <Label Name="lab33" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Grid>
        </Grid>
        <Button Name="btnStart" Content="开始游戏" HorizontalAlignment="Left" Margin="477,87,0,0" VerticalAlignment="Top" Height="36" Width="90" Click="btnStart_Click"/>
        <Button Name="btnReset"  Content="重置游戏" HorizontalAlignment="Left" Margin="591,87,0,0" VerticalAlignment="Top" Height="36" Width="90" Click="btnReset_Click"/>
        <TextBlock Name="textBlock" Background="Aquamarine" HorizontalAlignment="Left" Margin="477,128,0,0" TextWrapping="Wrap" Text="请开始您的游戏" VerticalAlignment="Top" Height="300" Width="204"/>
